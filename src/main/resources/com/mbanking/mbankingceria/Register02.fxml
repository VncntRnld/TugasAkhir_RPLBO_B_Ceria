<AnchorPane prefHeight="560.0" prefWidth="320.0" styleClass="background" stylesheets="@assets/CSS/style.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mbanking.mbankingceria.RegisterController">
   <children>
      <Pane layoutX="27.0" layoutY="32.0" AnchorPane.leftAnchor="17.0" AnchorPane.topAnchor="22.0">
         <children>
            <ImageView fitHeight="30.0" fitWidth="30.0" layoutX="7.0" layoutY="2.0">
               <image>
                  <Image url="@assets/img/backButton-01.png" />
               </image>
               <cursor>
                  <Cursor fx:constant="DEFAULT" />
               </cursor>
            </ImageView>
            <Button fx:id="buttonBack" mnemonicParsing="false" onAction="#toRegister" prefHeight="32.0" prefWidth="46.0" styleClass="transButton" stylesheets="@assets/CSS/style.css">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
      </Pane>
      <ImageView fitHeight="200.0" fitWidth="200.0" layoutX="60.0" layoutY="-13.0">
         <image>
            <Image url="@assets/img/Logo.png" />
         </image>
      </ImageView>
      <Label alignment="CENTER" layoutX="93.0" layoutY="127.0" prefHeight="44.0" prefWidth="133.0" text="REGISTER" textAlignment="CENTER" textFill="WHITE" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <font>
            <Font name="System Bold" size="29.0" />
         </font>
      </Label>
      <TextField fx:id="inputUsername" layoutX="56.0" layoutY="190.0" prefHeight="35.0" prefWidth="206.0" promptText="Username" />
      <PasswordField fx:id="inputPassword" layoutX="56.0" layoutY="235.0" prefHeight="35.0" prefWidth="206.0" promptText="Password" />
      <PasswordField fx:id="inputConfirm" layoutX="56.0" layoutY="280.0" prefHeight="35.0" prefWidth="206.0" promptText="Re-enter Password" />
      <PasswordField fx:id="inputPIN" layoutX="56.0" layoutY="325.0" prefHeight="35.0" prefWidth="206.0" promptText="PIN" />
      <Button fx:id="submit" layoutX="106.0" layoutY="434.0" mnemonicParsing="false" onAction="#submitForm" prefHeight="30.0" prefWidth="106.0" style="-fx-background-color: white;" text="Selesai">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      <Label layoutX="72.0" layoutY="513.0" text="Already have an account? ," textFill="WHITE">
         <font>
            <Font size="11.0" />
         </font>
      </Label>
      <Hyperlink fx:id="toSignIn" layoutX="201.0" layoutY="509.0" onAction="#moveSignIn" text="Sign in">
         <font>
            <Font name="System Bold" size="11.0" />
         </font>
      </Hyperlink>
   </children>
</AnchorPane>
